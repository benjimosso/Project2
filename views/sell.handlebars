<div class="columns" id="saleForm">
    <div class="column is-half">

        <form class="new-sale-form">

            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" id="pokeSaleName" placeholder="Please enter the name of the pokemon . . .">
                </div>
            </div>
            <div class="field">
                <label class="label">Attack</label>
                <div class="control">
                    <input class="input" type="text" id="pokeSaleAttack" placeholder="Please enter the attack stat of the pokemon . . .">
                </div>
            </div>
            <div class="field">
                <label class="label">Defense</label>
                <div class="control">
                    <input class="input" type="text" id="pokeSaleDefense" placeholder="Please enter the defense stat of the pokemon . . .">
                </div>
            </div>
            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <textarea class="textarea has-fixed-size" type="text" id="pokeSaleDescription" placeholder="Please enter a description about the pokemon . . ."></textarea>
                </div>
            </div>
            <div class="field">
                <label class="label">Price</label>
                <div class="control">
                    <input class="input" type="text" id="pokeSalePrice" placeholder="Please enter the price of the pokemon . . .">
                </div>
            </div>

            {{!-- will get the pokemon_id based on the pokemon selected --}}
            <div class="field">
                <label class="label">Subject</label>
                <div class="control">
                    <div class="select">
                    <select id="pokeSaleDropdown">

                    </select>
                    </div>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" type="submit" value="Submit">Submit</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Cancel</button>
                </div>
            </div>

        </form>
    
    </div>
</div>

